/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  background-color: #FBFCFE;
}
page__header{
  width:100%;
}
.weui-search-bar {
  background-color:#DC4238;
  border: 1px  solid #DC4238;
}
.weui-search-bar__box {
  position: relative;
}
.weui-search-bar__form{
  height: 65rpx;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 50%;
  transform:translateX(-50%);
}
.weui-search-bar__label{
  background-color: #DE655C;
  border: 0px solid #DE655C;
  border-radius: 20rpx;
}
.weui-search-bar__text{
  color: #EDA8A3; 
}
.swiper_header{
  background-color: #DC4238;
  padding-bottom: 10rpx
}
.swiper_header_text{
  display:inline-block;
  text-align: center;
  width: 50%;
  color: #ffffff;
  font-size: 15px;
  box-sizing: border-box;
}
.weui-navbar-slider{
  width:28px;
  height: 5px;
  background: #ffffff;
  border-radius:10rpx;
  transition: transform .6s;
 }
 .Allswiper{
   height: 100%;
   width: 100%;
 }
 .comment, .radio {
   height: 100%;
   width: 100%;
   overflow: scroll;
 }
 .banner {
    position:absolute;
    top:0; left:0; right:0;
    margin:auto;
    width: 94%;
    height: 90%;
    border-radius: 15rpx;
 }
 .swiper_item{
  padding-bottom: 15rpx;
}
.comment_container_box {
  display: flex;
  height: 130rpx;
  position: relative;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #EDEEF0;
}
.comment_box {
  width: 25%;
  text-align: center;
}
.container_images{
  width: 80rpx;
  height: 40px;
  background-color: #DC4238;
  border-radius: 50%;
  /* left: 50%; */
  transform: translate(60%)
}
.commentImage{
  width:50%;
  height: 50%;
  /* top: 50%; */
  transform: translate(0%,50%);
}
.comment_text{
  font-size: 14px;
}
.songsheet_items_allbox{
  margin-top: 25rpx;
}
.songsheet_container_title{
  font-size: 17px;
  font-weight: bold;
  padding-left: 10rpx;
}
/* .songsheet_item_box{
  padding-top: 10rpx;
  width: 33%;
  display: inline-block;
  box-sizing: border-box;
} */
.recommend_mv{
  width: 50%;
  display: inline-block;
  padding-top: 10rpx;
}
.songsheet_container_image{
  width: 95%;
  height: 220rpx;
  border-radius: 8rpx;
}
.songsheet_container_text{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
  font-size: 13px;
  margin-top: 10rpx;
  padding-left: 10rpx;
}
.newsong_songname{
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
}
.newsong_artists{
  font-size: 10px;
  padding-left: 10rpx;
  padding-top: -10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
}
.title_leader{
  width: 18px;
  height: 17px;
  display: inline-block;
  vertical-align: middle;
}
.songsheet_item_box{
  padding-top: 10rpx;
  width: 33%;
  display: inline-block;
  box-sizing: border-box;
}