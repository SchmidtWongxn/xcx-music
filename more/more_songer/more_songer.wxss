/* more/more_songer/more_songer.wxss */
.songer_box{
  display: flex;
  width: 100%;
  flex-flow: row;
  height: 200rpx;
  padding: 10rpx;
}
.songer_index{
  width: 10%;
  text-align: center;
  color: #9A9A9B;
  vertical-align: middle;
  line-height: 100px;
}
.songer_image_box{
  width: 30%;
}
.songer_image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.songer_name_box{
  width: 60%;
  height: 100%;
}
.songer_name{
  font-size: 15px;
  padding-left: 20rpx;
}
.songer_score{
  display: block;
  font-size: 12px;
  color: #9A9A9B;
  padding-left:20rpx;
  padding-top: 65rpx;
}